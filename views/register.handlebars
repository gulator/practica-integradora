<section class="login">
  <div class="container-login register">
    <h3>REGISTRO</h3>
    <form class="formulario-login" action="/api/users" method="post">
      <input type="text" placeholder="nombre" name="first_name"/>
      <input type="text" placeholder="apellido" name="last_name"/>
      <input type="email" placeholder="email" name="email"/>
      <input type="number" placeholder="edad" name="age"/>
      <input type="password" placeholder="password" name="password"/>
      <button type="submit">registrarse</button>
      {{#if mensaje}}
      <div class="alert alert-danger rojo" role="alert">
        Mail ya registrado
      </div>
      {{/if}}
    </form>
  </div>
</section>